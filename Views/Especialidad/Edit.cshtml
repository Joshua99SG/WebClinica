@model Especialidad

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link href="~/css/StyleSheet.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/font-awesome.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/animate.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/owl.carousel.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css" asp-append-version="true">
    <!-- MAIN CSS -->
    <link rel="stylesheet" href="~/css/tooplate-style.css" asp-append-version="true">
    <link href="~/css/especializado.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <partial name="_Menu" />
    <div class="container" style="margin-top:15px;">
        <main class="pb-3" role="main">
            <div class="row">
                <form asp-action="Edit" method="post" id="viewAgregar">
                    <div class="container-fluid">
                        <fieldset>
                            <legend class="text-center header">Agregar nueva especialidad</legend>
                            <br style="margin-top:15px;" />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group row">
                                <div class="col-md-3 text-align-right">
                                    <label asp-for="EspecialidadId" class="col-form-label"></label>
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="EspecialidadId" readonly="readonly" class="form-control" placeholder="ID Especialidad" />
                                </div>
                                <span asp-validation-for="EspecialidadId" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3 text-align-right">
                                    <label asp-for="Nombre" class="control-label"></label>
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                                </div>
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3 text-align-right">
                                    <label asp-for="Descripcion" class="control-label"></label>
                                </div>
                                <div class="col-md-6">
                                    <textarea asp-for="Descripcion" row="4" cols="50" class="form-control" placeholder="Descripcion"></textarea>
                                </div>
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>
                        </fieldset>
                        <div class="row" style="display:flex; justify-content:space-between">
                            <div class="col-md-4 text-align-right">
                                <a class="btn btn-primary btn-lg" id="Editar" onclick="abriModal()" style="border-radius: 50px; padding: 12px 15px; border-width: 1px; border-style: solid; text-transform: uppercase;">Agregar</a>
                            </div>
                            <br />
                            <div class="col-md-4">
                                <a class="btn btn-info btn-lg" id="regresar" asp-action="Index" style="border-radius: 50px; padding: 12px 15px; border-width: 1px; border-style: solid; text-transform: uppercase;">Regresar</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </main>
    </div>
    <script src="~/js/jquery.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery.sticky.js" asp-append-version="true"></script>
    <script src="~/js/jquery.stellar.min.js" asp-append-version="true"></script>
    <script src="~/js/wow.min.js" asp-append-version="true"></script>
    <script src="~/js/smoothscroll.js" asp-append-version="true"></script>
    <script src="~/js/owl.carousel.min.js" asp-append-version="true"></script>
    <script src="~/js/custom.js" asp-append-version="true"></script>
    <script src="~/js/datatables.min.js" asp-append-version="true"></script>
    <script src="~/js/especializado.js" asp-append-version="true"></script>
    <script src="~/js/Utilitarios.js" asp-append-version="true"></script>
    <script src="~/js/sweetalert2.js" asp-append-version="true"></script>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
