@model Clinica.Models.Pagina

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Content.cshtml";
    List<SelectListItem> Lista = ViewBag.ListaMenu;
    List<SelectListItem> ListaControlador = ViewBag.ListaControlador;
}

<head>
    <title>Agregar pagina</title>
</head>
<partial name="_Menu" />
<div class="container contenedorPrincipalCreate">
    <main class="pb-3" role="main">
        <div class="row">
            <form asp-action="Create" method="post" id="viewAgregar">
                <div class="container-fluid">
                    <fieldset>
                        <legend class="text-center header">Agregar nueva pagina</legend>
                        <br class="brDivisor" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="PaginaId" class="col-form-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="PaginaId" value="@ViewBag.ID" readonly="readonly" class="form-control" />
                            </div>
                            <span asp-validation-for="PaginaId" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Menu" class="col-form-label"></label>
                            </div>
                            <div class="col-md-6">
                                <select asp-for="Menu" asp-items="@Lista" class="form-control"></select>
                            </div>
                            <span asp-validation-for="Menu" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Controlador" class="col-form-label"></label>
                            </div>
                            <div class="col-md-6">
                                <select asp-for="Controlador" asp-items="@ListaControlador" class="form-control"></select>
                            </div>
                            <span asp-validation-for="Controlador" class="text-danger"></span>
                        </div>
                    </fieldset>
                    <div class="row contenedorBotonesCreate">
                        <div class="col-md-4 text-align-right">
                            <input type="submit" class="btn btn-primary btn-lg botonesAgregar" value="Agregar" id="agregar" onclick="Agregar()" />
                        </div>
                        <br />
                        <div class="col-md-4">
                            <a class="btn btn-info btn-lg botonesRegresar" id="regresar" asp-controller="AsignaRol" asp-action="Index">Regresar</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </main>
</div>
<partial name="_EndPag" />
