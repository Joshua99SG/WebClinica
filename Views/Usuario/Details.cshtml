@model WebClinica.Models.Usuario

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Content.cshtml";
    List<SelectListItem> Lista = ViewBag.ListaTipoUsuario;
}

<head>
    <title>Detalles usuario</title>
</head>
<partial name="_Menu" />
<div class="container contenedorPrincipalCreate">
    <main class="pb-3" role="main">
        <div class="row">
            <form asp-action="Details" method="post">
                <div class="container-fluid">
                    <fieldset>
                        <legend class="text-center header">Detalles usuario</legend>
                        <br class="brDivisor" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="UsuarioId" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="UsuarioId" disabled class="form-control" />
                            </div>
                            <span asp-validation-for="UsuarioId" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Nombre" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="Nombre" disabled class="form-control" />
                            </div>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Password" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="Password" disabled class="form-control" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="TipoUsuarioId" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <select asp-for="TipoUsuarioId" disabled class="form-control" asp-items="@Lista"></select>
                            </div>
                        </div>
                    </fieldset>
                    <div class="row contenedorBotonesCreate">
                        <div class="col-md-4">
                            <a class="btn btn-info btn-lg botonesRegresar" id="regresar" asp-action="Index">Regresar</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </main>
</div>
<partial name="_EndPag" />