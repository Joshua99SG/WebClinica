@model Citas
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Content.cshtml";
    List<SelectListItem> ListaPacientes = ViewBag.ListaPacientes;
    List<SelectListItem> ListaMedicos = ViewBag.ListaMedicos;
    List<SelectListItem> ListaEspecialidades = ViewBag.ListaEspecialidades;
}

<head>
    <title>Agregar citas</title>
</head>
<partial name="_Menu" />
<div class="container" style="margin-top:15px;">
    <main class="pb-3" role="main">
        <div class="row">
            <form asp-action="Create" method="post" id="viewAgregarCita">
                <div class="container-fluid">
                    <fieldset>
                        <legend class="text-center header">Agregar nueva cita</legend>
                        <br style="margin-top:15px;" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="PacienteId" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <select asp-for="PacienteId" asp-items="@ListaPacientes" class="form-control"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="MedicoId" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <select asp-for="MedicoId" asp-items="@ListaMedicos" class="form-control"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="FechaCita" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input type="date" asp-for="FechaCita" class="form-control" />
                            </div>
                            <span asp-validation-for="FechaCita" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Diagnostico" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="Diagnostico" class="form-control" placeholder="Diagnostico" />
                            </div>
                            <span asp-validation-for="Diagnostico" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="EspecialidadId" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <select asp-for="EspecialidadId" asp-items="@ListaEspecialidades" class="form-control"></select>
                            </div>
                        </div>
                    </fieldset>
                    <div class="row" style="display:flex; justify-content:space-between">
                        <div class="col-md-4 text-align-right">
                            <input type="submit" class="btn btn-primary btn-lg" value="Agregar" id="agregar" onclick="Agregar()" style="border-radius: 50px; padding: 12px 15px; border-width: 1px; border-style: solid; text-transform: uppercase;" />
                        </div>
                        <br />
                        <div class="col-md-4">
                            <a class="btn btn-info btn-lg" id="regresar" asp-action="Index" style="border-radius: 50px; padding: 12px 15px; border-width: 1px; border-style: solid; text-transform: uppercase;">Regresar</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </main>
</div>
<partial name="_EndPag" />