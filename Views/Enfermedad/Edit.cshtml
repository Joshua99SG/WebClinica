@model Enfermedad

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Content.cshtml";
}

<head>
    <title>Editar enfermedad</title>
</head>
<partial name="_Menu" />
<div class="container" style="margin-top:15px;">
    <main class="pb-3" role="main">
        <div class="row">
            <form asp-action="Edit" method="post" id="viewEditarEnfermedad">
                <div class="container-fluid">
                    <fieldset>
                        <legend class="text-center header">Editar enfermedad</legend>
                        <br style="margin-top:15px;" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="EnfermedadId" class="col-form-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="EnfermedadId" readonly="readonly" class="form-control" placeholder="ID Enfermedad" />
                            </div>
                            <span asp-validation-for="EnfermedadId" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Nombre" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                            </div>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Descripcion" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <textarea asp-for="Descripcion" row="4" cols="50" class="form-control" placeholder="Descripcion"></textarea>
                            </div>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                    </fieldset>
                    <div class="row" style="display:flex; justify-content:space-between">
                        <div class="col-md-4 text-align-right">
                            <a class="btn btn-primary btn-lg" id="Editar" onclick="Editar()" style="border-radius: 50px; padding: 12px 15px; border-width: 1px; border-style: solid; text-transform: uppercase;">Editar</a>
                        </div>
                        <br />
                        <div class="col-md-4">
                            <a class="btn btn-info btn-lg" id="regresar" asp-action="Index" style="border-radius: 50px; padding: 12px 15px; border-width: 1px; border-style: solid; text-transform: uppercase;">Regresar</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </main>
</div>
<partial name="_EndPag" />