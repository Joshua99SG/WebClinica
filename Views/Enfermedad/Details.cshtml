@model WebClinica.Models.Enfermedad

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Content.cshtml";
}
<partial name="_Menu" />
<div class="container contenedorPrincipalCreate">
    <main class="pb-3" role="main">
        <div class="row">
            <form asp-action="Details" method="post" id="viewDetails">
                <div class="container-fluid">
                    <fieldset>
                        <legend class="text-center header">Detalles</legend>
                        <br class="brDivisor" />
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="EnfermedadId" class="col-form-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="EnfermedadId" disabled class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Nombre" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="Nombre" disabled class="form-control"  />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Descripcion" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <textarea asp-for="Descripcion" disabled row="4" cols="50" class="form-control" ></textarea>
                            </div>
                        </div>
                    </fieldset>
                    <div class="row contenedorBotonesCreate">
                        <div class="col-md-4">
                            <a class="btn btn-info btn-lg botonesRegresar" id="regresar" asp-action="Index">Regresar</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </main>
</div>
<partial name="_EndPag" />
