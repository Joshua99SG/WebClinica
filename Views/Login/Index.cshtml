
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Content.cshtml";
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
            <form class="login100-form validate-form flex-sb flex-w" asp-controller="Login" method="post" id="viewLogin">
                <span class="login100-form-title p-b-32">
                    Inicia Sesión
                </span>

                <span class="txt1 p-b-11">
                    Nombre de usuario
                </span>
                <div class="wrap-input100 validate-input m-b-36">
                    <input class="input100" type="text" id="name" value="" required/>
                    <span class="focus-input100"></span>
                </div>
                <span class="txt1 p-b-11">
                    Contraseña
                </span>
                <div class="wrap-input100 validate-input m-b-12">
                    <span class="btn-show-pass">
                        <i class="fa fa-eye"></i>
                    </span>
                    <input class="input100" onkeyup="KeyUpEnterLogin()" id="password" value="" required/>
                    <span class="focus-input100"></span>
                </div>
                <div class="flex-sb-m w-full p-b-48">
                    <div class="contact100-form-checkbox">
                        <input class="input-checkbox100" id="check1" type="checkbox" name="Recuerdame" />
                        <label class="label-checkbox100" for="check1">
                            Recuerdame
                        </label>
                    </div>
                    <div>
                        <a href="" class="txt3">
                            Olvidaste la contraseña?
                        </a>
                    </div>
                </div>
                <div class="container-login100-form-btn">
                    <a class="login100-form-btn" id="Ingresar" onclick="Login()">
                        Iniciar Sesión
                    </a>
                    <a class="login100-form-btn-Registrarse" id="Registrarse" onclick="AbrirSingIn()">
                        Registrarse
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

